{
  "name": "proofpass-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Production-grade platform for creating W3C Verifiable Credentials, zero-knowledge proofs, and digital product passports anchored on blockchain",
  "keywords": [
    "verifiable-credentials",
    "w3c",
    "blockchain",
    "zero-knowledge-proofs",
    "digital-product-passport",
    "stellar",
    "attestation",
    "decentralized-identity",
    "did",
    "cryptography"
  ],
  "homepage": "https://github.com/PROOFPASS/ProofPassPlatform#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PROOFPASS/ProofPassPlatform.git"
  },
  "bugs": {
    "url": "https://github.com/PROOFPASS/ProofPassPlatform/issues"
  },
  "author": {
    "name": "Federico Boiero",
    "email": "fboiero@frvm.utn.edu.ar"
  },
  "contributors": [
    {
      "name": "Federico Boiero",
      "email": "fboiero@frvm.utn.edu.ar"
    }
  ],
  "license": "AGPL-3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w apps/api",
    "dev:platform": "npm run dev -w apps/platform",
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build -w packages/types && npm run build -w packages/vc-toolkit && npm run build -w packages/blockchain && npm run build -w packages/client && npm run build -w packages/templates && npm run build -w packages/qr-toolkit",
    "build:api": "npm run build -w apps/api",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:blockchain": "cd packages/blockchain && npx tsx examples/test-local.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules coverage",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:generate": "cd apps/api && npx prisma generate",
    "db:studio": "cd apps/api && npx prisma studio",
    "db:reset": "cd apps/api && npx prisma migrate reset --force",
    "db:seed": "cd apps/api && npx prisma db seed",
    "setup:db": "npm run db:generate && npm run db:migrate",
    "setup:stellar": "npx tsx scripts/setup-stellar.ts",
    "demo": "scripts/demo-complete.sh",
    "demo:fast": "DEMO_SPEED=fast scripts/demo-complete.sh",
    "demo:slow": "DEMO_SPEED=slow scripts/demo-complete.sh",
    "demo:stellar": "npx tsx scripts/demo-stellar-testnet.ts",
    "cli": "npx tsx cli/proofpass.ts",
    "validate": "scripts/validate-system.sh",
    "health": "scripts/health-check.sh",
    "install:wizard": "scripts/install-wizard.sh",
    "prepare": "husky install || true"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@stellar/stellar-sdk": "^14.3.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
CORS_ORIGIN=*
PUBLIC_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=proofpass
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379

# ====================
# Multi-Blockchain Configuration
# ====================

# Default blockchain network to use (stellar-testnet, stellar-mainnet, optimism-sepolia, optimism, arbitrum-sepolia, arbitrum)
DEFAULT_BLOCKCHAIN_NETWORK=stellar-testnet

# Stellar Blockchain
STELLAR_NETWORK=stellar-testnet  # stellar-testnet or stellar-mainnet
STELLAR_SECRET_KEY=
STELLAR_PUBLIC_KEY=

# Optimism L2 (EVM)
OPTIMISM_NETWORK=optimism-sepolia  # optimism-sepolia or optimism
OPTIMISM_RPC_URL=https://sepolia.optimism.io
OPTIMISM_PRIVATE_KEY=

# Arbitrum L2 (EVM)
ARBITRUM_NETWORK=arbitrum-sepolia  # arbitrum-sepolia or arbitrum
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_PRIVATE_KEY=

# Authentication
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRES_IN=7d
API_KEY_SALT=change-this-salt-in-production

# DID Manager - Encryption for storing user DIDs
# IMPORTANT: Generate a secure 32-byte hex key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DID_ENCRYPTION_KEY=

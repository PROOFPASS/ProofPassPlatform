# ProofPass Production Environment Configuration
# Copy this file to .env.production and fill in your values

# API Configuration
API_PORT=3000
PUBLIC_URL=https://api.yourdomain.com
CORS_ORIGIN=*
LOG_LEVEL=info

# Database Configuration
POSTGRES_USER=proofpass
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=proofpass

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=GENERATE_A_SECURE_64_CHAR_HEX_STRING
JWT_EXPIRES_IN=7d
API_KEY_SALT=GENERATE_ANOTHER_SECURE_64_CHAR_HEX_STRING

# Stellar Blockchain (optional - run: npx tsx scripts/setup-stellar.ts)
STELLAR_NETWORK=testnet
STELLAR_SECRET_KEY=
STELLAR_PUBLIC_KEY=

# Optional: External Database (if not using docker postgres)
# Uncomment and configure if using external PostgreSQL/Redis
# EXTERNAL_DATABASE_HOST=your-database-host.com
# EXTERNAL_DATABASE_PORT=5432
# EXTERNAL_REDIS_URL=redis://user:pass@your-redis-host.com:6379

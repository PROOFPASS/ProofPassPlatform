# ProofPass API - Production Configuration
# Domain: api.proofpass.co

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# CORS - Allow requests from proofpass.co
CORS_ORIGIN=https://proofpass.co,https://www.proofpass.co

# Database (Production)
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_NAME=proofpass_prod
DATABASE_USER=proofpass_user
DATABASE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=20

# Redis (Production)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_TLS=true

# Stellar Blockchain
# IMPORTANT: For production, use mainnet with a funded account
# To create a mainnet account:
# 1. Generate keypair: https://laboratory.stellar.org/#account-creator
# 2. Buy XLM on exchange (Coinbase, Kraken, Binance)
# 3. Transfer min 1 XLM to your public key to activate account
# 4. Replace keys below with your mainnet credentials
STELLAR_NETWORK=mainnet
STELLAR_SECRET_KEY=CHANGE_THIS_MAINNET_SECRET_BEFORE_LAUNCH
STELLAR_PUBLIC_KEY=CHANGE_THIS_MAINNET_PUBLIC_BEFORE_LAUNCH

# Authentication
JWT_SECRET=CHANGE_THIS_LONG_RANDOM_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d
API_KEY_SALT=CHANGE_THIS_LONG_RANDOM_SALT_MIN_32_CHARS

# Rate Limiting (Production - More restrictive)
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=15m
RATE_LIMIT_USER_MAX=60
RATE_LIMIT_USER_WINDOW=1m
RATE_LIMIT_EXPENSIVE_MAX=10
RATE_LIMIT_EXPENSIVE_WINDOW=1m
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_GLOBAL_WINDOW=1m

# Security
HELMET_ENABLED=true
REQUEST_SIZE_LIMIT=1mb

# Monitoring (Optional)
SENTRY_DSN=
APM_ENABLED=false

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs

# Domain
API_DOMAIN=api.proofpass.co
WEB_DOMAIN=proofpass.co
